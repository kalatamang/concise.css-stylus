@if $use-container == true {
    //------------------------------------//
    //  $CONTAINER
    //------------------------------------//
    .container { width: 90%; }

    breakpoint(small) { .container { width: 620px; } }

    breakpoint(medium) { .container { width: 768px; } }

    breakpoint(large) { .container { width: 960px; } }

    breakpoint(extra-large) { .container { width: 1140px; } }
}